<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clover.remote.client.lib.example"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" >
        17
    </uses-sdk>

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <application
        android:debuggable="true"
        android:icon="@mipmap/clover_logo"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.clover.remote.client.lib.example.StartupActivity"
            android:label="@string/title_activity_example_pos"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.clover.remote.client.lib.example.ExamplePOSActivity"
            android:label="@string/title_activity_example_pos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.clover.remote.client.lib.example.qrCode.barcode.BarcodeCaptureActivity"
            android:label="@string/title_activity_example_pos"
            android:screenOrientation="landscape" >
        </activity>

        <service
            android:name="com.clover.remote.client.transport.usb.pos.PosUsbRemoteProtocolService"
            android:exported="true"
            android:label="CloverUSBService" >
            <intent-filter>
                <action android:name="com.clover.remote.client.transport.usb.pos.PosUsbRemoteProtocolService" />
            </intent-filter>
        </service> <!-- the receiver is required for detached, per documentation and experimentation -->
        <receiver android:name="com.clover.remote.client.transport.usb.pos.PosUsbBroadcastReceiver" >
            <intent-filter>

                <!-- <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/> -->
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter" />
        </receiver> <!-- The activity is required for attached so it can prompt for permission -->
        <activity android:name="com.clover.remote.client.transport.usb.pos.UsbActivity" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <!-- <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/> -->
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
            <!-- <meta-data android:resource="@xml/device_filter" android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/> -->
        </activity>
        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>